{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "types": [
            "svelte"
        ]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}
